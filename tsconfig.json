{
	"compilerOptions": {
		"baseUrl": "src",
		"target": "es5",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@hooks/*": ["hooks/*"],
			"@interfaces/*": ["interfaces/*"],
			"@services/*": ["services/*"],
			"@assets/*": ["assets/*"],
			"@modules/*": ["modules/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
